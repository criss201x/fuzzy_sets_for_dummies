# Función para composición máx–mín
def max_min_composition(A, B):
    m, n = A.shape[0], B.shape[1]
    C = np.zeros((m, n))
    for i in range(m):
        for j in range(n):
            C[i, j] = np.max(np.minimum(A[i,:], B[:,j]))
    return C


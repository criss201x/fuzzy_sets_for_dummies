def min_media_composition(A, B):
    m, n = A.shape[0], B.shape[1]
    C = np.zeros((m, n))
    for i in range(m):
        for j in range(n):
            medias = (A[i,:] + B[:,j]) / 2
            C[i, j] = np.min(medias)
    return C


        w  = min(wt, wh)                       # AND (t-norma: min)
        act = np.fmin(w, mf_p)                 # Implicaci√≥n Mamdani (recorte)
        acts.append(act); ws.append(w)
        y_i = fuzz.defuzz(pres, act, 'centroid') if act.max()>0 else np.nan
        y_rules.append(y_i)

    # Agregaci√≥n
